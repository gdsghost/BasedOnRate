<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="50dp" 
    android:gravity="center_vertical"
    android:paddingTop="@dimen/padding_list_row"
    android:paddingEnd="@dimen/padding_list_row" >
  <ImageView
    android:id="@+id/card_pro_pic"
    android:scaleType="centerCrop"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:focusable="false"
    android:clickable="false"
    android:src="@drawable/no_profile_image_circle"
    android:layout_marginStart="5dp" />
  <TextView
    android:id="@+id/card_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:lines="1"
    android:drawablePadding="4dp"
    android:layout_marginStart="10dp"
    android:textSize="@dimen/msg_text_primary"
    android:clickable="false"
    android:layout_marginTop="10dp"
    android:paddingEnd="10dp"
    android:focusable="false"
    android:layout_toEndOf="@id/card_pro_pic"
    android:gravity="center_vertical"
    android:textAlignment="textStart" 
    android:layout_gravity="center_vertical"/> 
<RatingBar android:id="@+id/UserRatingBar"
    style="?android:attr/ratingBarStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="8dp" 
    android:layout_marginTop="10dp"
    android:layout_gravity="center_vertical"
    android:gravity="end" 
    android:numStars="5"
    android:stepSize="1.0"
    android:progressTint="#ffa600" 
    android:secondaryProgressTint="#ffa600"
    android:isIndicator="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/colorDivider"
        android:layout_below="@id/card_pro_pic" />
</RelativeLayout>