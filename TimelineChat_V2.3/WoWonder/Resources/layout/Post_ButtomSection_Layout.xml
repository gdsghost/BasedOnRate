    <LinearLayout 
        android:id="@+id/RatingLinearLayout"
        android:gravity="center"  
        android:layout_height="match_parent" 
        android:layout_weight="1.2"   
        android:clickable="true"  
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp"
        android:orientation="horizontal">
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <RatingBar android:id="@+id/RatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:isIndicator="true"
            android:progressTint="#ffa600" 
            android:secondaryProgressTint="#ffa600"/>
        <TextView
		    android:id="@+id/Likecount"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="?attr/colorReact"
		    android:textSize="11sp"
            android:textStyle="bold"
		    android:text="@string/Lbl_Reactions" 
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>
        </LinearLayout>
        <Button
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:id="@+id/RatingText"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#ffa600"
            android:textColor="@android:color/white"
            android:clickable="false"
            android:focusable="false"
            android:textSize="13sp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/CommentLinearLayout"
        android:gravity="center"  
        android:layout_height="match_parent" 
        android:layout_weight="0.9"   
        android:clickable="true"  
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp"> 
        <TextView  
            android:layout_width="wrap_content" 
            android:layout_height="match_parent" 
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" 
            android:id="@+id/CommentText"
            android:textSize="13sp"
            android:textColor="?attr/colorReact"
            android:drawableTint="?attr/colorReact"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/icon_post_comment_vector"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="0dp"
            android:text="@string/Lbl_Comment" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ShareLinearLayout"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp">
        <TextView
            android:id="@+id/ShareText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginStart="7dp"
            android:textSize="13sp"
            android:drawableTint="?attr/colorReact"
            android:drawablePadding="7dp"
            android:drawableStart="@drawable/icon_post_share_vector"
            android:textColor="?attr/colorReact"
            android:text="@string/Lbl_Share"
            android:layout_marginEnd="4dp" />
    </LinearLayout>
</LinearLayout>