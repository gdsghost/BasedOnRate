<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:id="@+id/main"
    android:gravity="start">
    <RelativeLayout
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/chat_rounded_left_layout"
        android:layout_width="230dp"
        android:id="@+id/bubble_layout"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/imgDisplay"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:scaleType="fitCenter"  
        android:src="@drawable/imageplacholder"
        android:adjustViewBounds="true"  />
        <TextView
            android:id="@+id/name"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="?attr/colorAccent"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_weight="1" />
      <LinearLayout
        android:id="@+id/shadowLiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:padding="2dp"
        android:weightSum="4"
        android:layout_alignParentBottom="true" 
        android:orientation="horizontal" 
        android:background="@xml/radius_corner_shape">
        <TextView
          android:id="@+id/icon"
          android:textColor="@color/textLight_color"
          android:layout_marginEnd="0dp"
          android:textSize="12sp"
          android:layout_marginBottom="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="false"
          android:layout_alignParentBottom="true"
          android:padding="2dp"
          android:gravity="start"
          android:layout_marginStart="6dp"
          android:layout_marginTop="3dp"
          android:layout_weight="1"/>
        <TextView
          android:id="@+id/fileName"
          android:textColor="@color/textLight_color"
          android:layout_marginEnd="0dp"
          android:textSize="10sp"
          android:layout_marginBottom="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="false"
          android:layout_alignParentBottom="true"
          android:padding="2dp"
          android:layout_centerInParent="true"
          android:gravity="start|center"  
          android:layout_gravity="start|center"
          android:text="6PQdMlEludmU...mp4"
          android:layout_marginStart="0dp"
          android:layout_marginTop="3dp"
          android:layout_weight="1"/>
        <TextView
          android:id="@+id/time"
          android:textColor="@color/textLight_color"
          android:layout_marginEnd="0dp"
          android:textSize="10sp"
          android:layout_marginBottom="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="2dp"
          android:layout_centerInParent="true"
          android:gravity="start|center"  
          android:layout_gravity="start|center"
          android:text="10:00 PM"
          android:layout_marginStart="0dp"
          android:layout_marginTop="3dp"
          android:layout_weight="1"/>
        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginTop="1dp" 
          android:layout_marginBottom="0dp"
          android:layout_centerInParent="true"
          android:gravity="start|center"  
          android:layout_gravity="start|center">
          <com.airbnb.lottie.LottieAnimationView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/starIcon"
            android:layout_marginBottom="3dp"
            android:layout_centerInParent="true"
            android:gravity="start|center"  
            android:layout_gravity="start|center"
            android:scaleType="fitCenter"
            app:lottie_loop="false"
            app:lottie_fileName="FavAnim.json" />
          <ImageView
            android:id="@+id/fav"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_fav_post_vector"
            android:layout_centerInParent="true"
            android:gravity="start|center"  
            android:layout_gravity="start|center"
            android:padding="2dp" />
        </RelativeLayout> 
      </LinearLayout>
        <ProgressBar
            android:id="@+id/loadingProgressview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="0"
            android:visibility="gone"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:progressBackgroundTint="@color/textLight_color"
            android:layout_centerHorizontal="true"
            android:secondaryProgress="100"
            android:indeterminate="false" />
        <at.markushi.ui.CircleButton
          android:id="@+id/playButton"
          android:layout_width="55dip"
          android:layout_height="55dip"
          app:cb_color="#A6000000"
          app:cb_pressedRingWidth="1dip"
          android:layout_marginBottom="6dp"
          android:layout_marginEnd="1dp"
          android:layout_marginStart="1dp"
          android:translationY="-6dp"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:src="@drawable/ic_play_arrow"
          android:layout_gravity="center_vertical" />
    </RelativeLayout>
</LinearLayout>